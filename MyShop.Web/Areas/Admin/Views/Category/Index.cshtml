@model List<Category>

@{
    ViewBag.PageTitle = "Category Management";
    ViewBag.CardTitle = "View Categories";
}


<div>
    <a asp-controller="Category" asp-action="Create" asp-area="Admin" class="btn btn-primary">Create</a>
</div><br />




<table class="table table-hover">
    <thead class="text-bold">
            <tr>
             <td>Name</td>
             <td>Describtion</td>
             <td>Created Time</td>
             <td>Actions</td>
            </tr>
          
        </thead>

        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.CreatedTime</td>
                <td>
                <a asp-action="Edit" asp-controller="Category" asp-route-id="@item.Id" class="btn btn-success">Edit</a> |
                <a asp-action="Delete" asp-controller="Category" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
</table>