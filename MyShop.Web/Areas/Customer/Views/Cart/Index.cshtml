@model ShoppingCartVM	
<!DOCTYPE html>
<html>
<head>
	<title>Shopping Cart</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" ">
	<link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
	<link rel="stylesheet" href="/ShoppingCart/assets/css/style.css">
</head>
<body>
	<main class="page">
		<section class="shopping-cart dark">
			<div class="container">
				<div class="d-flex align-items-center justify-content-between mt-2" style="height:40px;background-color:#343a40;color:white;border-start-start-radius:10px;border-start-end-radius:10px;">
					<p class="mt-3 ms-4 fs-6">Shopping Cart</p>

					<p class="mt-3 me-4" style="font-size:12px; border:2px solid white;padding:5px;border-radius:5px">	<a href="/customer/home" style="color:white;text-decoration:none"> Continue Shopping</a></p>

				</div>
				<div class="content">
					<div class="row">
						<div class="col-md-12">
							<div class="items">
							@foreach(var item in Model.CartList){
									<div class="product">
										<div class="row">
											<div class="col-md-3">
												<img class="img-fluid mx-auto d-block image" src="~/@item.Product.Img" width="100" height="100">
											</div>
											<div class="col-md-9">
												<div class="info">
													<div class="row">
														<div class="col-md-3 product-name">
															<div class="product-name">
																<a class="fw-bolder">@item.Product.Name</a>
																<div class="product-info">
																	<div><span class="value">@item.Product.Description</span></div>
																</div>
															</div>
														</div>
														<div class="col-md-3">
															<div class="btn btn-group" role="group">
															<span class="fw-bolder me-1">$@item.Product.Price</span>x<span class="fw-bolder ms-1">@item.Count</span>
															</div>
														</div>
														<div class="col-md-3">
															<div class="btn btn-group" role="group">
																<a class="btn btn-dark me-2" style="width:80px;" asp-action="Plus" asp-route-cartId="@item.Id"><i class="fa-regular fa-square-plus"></i></a>
																<a class="btn btn-dark" style="width:80px;" asp-action="Minus" asp-route-cartId="@item.Id"><i class="fa-regular fa-square-minus"></i></a>
															
															</div>

														</div>
														<div class="col-md-3">
															<div class="btn btn-group" role="group">
															<a asp-action="Remove" asp-route-cartId="@item.Id" class="btn btn-danger"><i class="fa-solid fa-trash"></i></a>
														</div>
														</div>
													</div>
												</div>
											</div>
										</div>
									</div>
							}
							</div>
						</div>
					</div>

					<div class="col-md-10 offset-1">
						<div class="summary">
							<div class="summary-item mb-1"><span class="text">Total</span><span class="price">$@Model.TotalCarts.ToString()</span></div>
							<a class="btn btn-primary btn-block" href="/Customer/Cart/Summary">Summary</a>
						</div>
					</div>
				</div>
			</div>
		</section>
	</main>
</body>
</html>

@section Scripts{
	<script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
}